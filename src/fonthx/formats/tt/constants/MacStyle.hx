package fonthx.formats.tt.constants;

/**
 * Macstyle constants for font header table
 * @see https://docs.microsoft.com/en-us/typography/opentype/spec/head
 */
class MacStyle {

	public static var REGULAR = 0x0000;
	public static var BOLD = 0x0001;
	public static var ITALIC = 0x0002;
	public static var OUTLINE = 0x0004;
	public static var SHADOW = 0x0008;
	public static var CONDENSED = 0x0010;
	public static var EXTENDED = 0x0020;

}
